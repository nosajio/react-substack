{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./types",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__", "**/mock", "node_modules"]
}
